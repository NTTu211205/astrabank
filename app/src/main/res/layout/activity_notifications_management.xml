<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:padding="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/tv_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="130dp"
        android:padding="16dp"
        android:text="Notifications"
        android:textColor="#007bff"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/divider_header"/>

    <TextView
        android:id="@+id/tv_unread_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="12"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/bg_circle_red"
        android:layout_toEndOf="@id/tv_main_title"
        android:layout_alignTop="@id/tv_main_title"
        android:layout_alignBottom="@id/tv_main_title"
        android:layout_marginStart="8dp" />


    <LinearLayout
        android:id="@+id/ll_tab_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_background_selector"
        android:layout_below="@id/tv_main_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_tab_inbox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Box"
            android:gravity="center"
            android:background="@drawable/tab_selected_left"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tab_read"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Read"
            android:gravity="center"
            android:background="@drawable/tab_unselected_right"
            android:textColor="#888888" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_tab_container"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:id="@+id/ll_notifications_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_details_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_list_notifications"
                tools:itemCount="10"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>