<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="My Accounts"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCheckingAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iconChecking"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:background="#E3F2FD"
                android:padding="8dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvCheckingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconChecking"
                android:text="Checking Account"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvCheckingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconChecking"
                android:layout_below="@id/tvCheckingTitle"
                android:text="**** 1234"
                android:textSize="14sp"
                android:textColor="#757575" />

            <View
                android:id="@+id/dividerChecking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/iconChecking"
                android:background="#EEEEEE"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividerChecking"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Balance"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvCheckingBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 5,450.00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#0D1E4C" />
            </LinearLayout>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeeCheckingAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/numpad_button_grey"
            android:layout_gravity="end"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="See Details"/>
        <RelativeLayout
            android:id="@+id/rlSavingsAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iconSavings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_save"
                android:background="#E8F5E9"
                android:padding="8dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvSavingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconSavings"
                android:text="Savings Account"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvSavingsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconSavings"
                android:layout_below="@id/tvSavingsTitle"
                android:text="**** 5678"
                android:textSize="14sp"
                android:textColor="#757575" />

            <LinearLayout
                android:id="@+id/lnSavingsBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconSavings"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Savings"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvSavingsBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 12,000.00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnSavingsBalance"
                android:layout_marginTop="12dp"
                android:background="#F9F9F9"
                android:padding="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interest Rate"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvInterestRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5% APY"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Month Profit"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/tvMonthlyProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ $ 45.00"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeeSavingAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/numpad_button_grey"
            android:layout_gravity="end"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="See Details"/>
        <RelativeLayout
            android:id="@+id/rlMortgageAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iconMortgage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:background="#FFF3E0"
                android:padding="8dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvMortgageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconMortgage"
                android:text="Home Mortgage"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvMortgageNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconMortgage"
                android:layout_below="@id/tvMortgageTitle"
                android:text="Loan #9988-77"
                android:textSize="14sp"
                android:textColor="#757575" />

            <View
                android:id="@+id/dividerMortgage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/iconMortgage"
                android:background="#EEEEEE"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividerMortgage"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Payment Due"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvPaymentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 1,250.00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPaymentFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Monthly"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeeMortgageAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/numpad_button_grey"
            android:layout_gravity="end"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="See Details"/>
    </LinearLayout>
</ScrollView>