<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_transfer_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionSuccessActivity">

    <Button
        android:id="@+id/btn_hoan_thanh"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/black"
        android:text="Hoàn thành"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAllCaps="false"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_hoan_thanh"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_success_check"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_success_circle"
                android:contentDescription="Thành công" />

            <ImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="86dp"
                android:layout_height="38dp"
                android:layout_below="@id/iv_success_check"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:contentDescription="Logo Ngân hàng"
                android:src="@drawable/ic_logo_vietqr" />

            <TextView
                android:id="@+id/tv_title_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_bank_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Chuyển thành công"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_amount"
                android:layout_centerHorizontal="true"
                android:text="VND 300,000"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:id="@+id/ll_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/tv_amount"
                android:paddingHorizontal="32dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/tv_receiver_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người nhận"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="tran cao phong"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_receiver_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="86686886688668"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tv_bank_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngân hàng nhận"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ngan hang ky thuong viet nam (Techcombank)"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tv_message_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lời nhắn"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAN CAO PHONG chuyển"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tv_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày chuyển"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 Thg 11, 2025 lúc 18:28"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tv_transaction_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giao dịch"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_transaction_id_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FT25314602571223"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>