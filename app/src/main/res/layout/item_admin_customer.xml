<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/tv_cus_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Name" android:textStyle="bold" android:textSize="16sp" android:textColor="#000"/>
        <TextView android:id="@+id/tv_cus_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Active" android:textColor="#4CAF50" android:textStyle="bold"/>
    </LinearLayout>

    <TextView android:id="@+id/tv_cus_cif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CIF: 8821001" android:textColor="#777" android:textSize="12sp"/>
    <TextView android:id="@+id/tv_cus_bal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VND 120,000" android:textColor="#000" android:textStyle="bold" android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="end">
        <Button android:id="@+id/btn_edit"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="Edit"
            android:textSize="12sp"
            android:backgroundTint="#EEE"
            android:textColor="#000"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFEBEE"
            android:text="Delete"
            android:textColor="#D32F2F"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>