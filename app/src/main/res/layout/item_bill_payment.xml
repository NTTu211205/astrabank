<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_history_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo_vietqr"
        android:padding="8dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electricity bill for November"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Thg 11, 2025"
            android:textColor="#757575"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_history_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- VND 1,250.00"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"/>

</LinearLayout>