<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgCheckingIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#E3F2FD"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:contentDescription="Checking Icon" />

    <!-- FIX Lá»†CH: alignTop + alignBottom -->
    <LinearLayout
        android:id="@+id/lnCheckingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgCheckingIcon"
        android:layout_alignTop="@id/imgCheckingIcon"
        android:layout_alignBottom="@id/imgCheckingIcon"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCheckingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking Account"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCheckingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="**** 1234"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/dividerChecking"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgCheckingIcon"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#EEEEEE" />

    <TextView
        android:id="@+id/tvLabelBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerChecking"
        android:text="Available Balance"
        android:textColor="#757575"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvCheckingBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLabelBalance"
        android:layout_marginTop="4dp"
        android:text="$ 5,450.00"
        android:textColor="#0D1E4C"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
