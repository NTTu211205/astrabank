<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_account_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Acc: 476365735196"
            android:textColor="#000000"
            android:text="1111111111111"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_complete_status"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_complete_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Incomplete"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:text="Incomplete"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_status_badge"
            android:textColor="#D32F2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_account_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_account_number"/>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_account_number"/>

        <TextView
            android:id="@+id/label_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principal:"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_divider"/>

        <TextView
            android:id="@+id/tv_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000,000 VND"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/label_principal"
            app:layout_constraintBaseline_toBaselineOf="@id/label_principal"/>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rate: 0.38%"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/label_principal"/>

        <TextView
            android:id="@+id/label_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term:"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_principal"/>

        <TextView
            android:id="@+id/tv_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 months"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/label_term"
            app:layout_constraintBaseline_toBaselineOf="@id/label_term"/>

        <TextView
            android:id="@+id/tv_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 20, 2025"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/label_term"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_term"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="#757575"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nha Be, TP.HO CHI MINH"
                android:textColor="#424242"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>