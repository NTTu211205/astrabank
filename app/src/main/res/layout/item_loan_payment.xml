<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/img_payment_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_send"
        android:background="#FFEBEE"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:contentDescription="Payment Icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_payment_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/tv_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Installment"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 25, 2025"
            android:textSize="12sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="- $1,250.00"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"/>

</RelativeLayout>