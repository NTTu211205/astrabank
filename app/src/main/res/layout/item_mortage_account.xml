<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgMortgageIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#FFF3E0"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_agenda"
        android:contentDescription="Mortgage Icon" />

    <!-- Fix lệch bằng alignTop + alignBottom -->
    <LinearLayout
        android:id="@+id/lnMortgageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgMortgageIcon"
        android:layout_alignTop="@id/imgMortgageIcon"
        android:layout_alignBottom="@id/imgMortgageIcon"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMortgageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Mortgage"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLoanNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Loan #9988-77"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/dividerMortgage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgMortgageIcon"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerMortgage"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Payment"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPaymentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="$ 1,250.00"
                android:textColor="#D32F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFEBEE"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="Monthly"
            android:textColor="#D32F2F"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
