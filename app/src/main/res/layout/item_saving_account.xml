<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgSavingsIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#E8F5E9"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_save"
        android:contentDescription="Savings Icon" />

    <!-- Block Title + Number -->
    <LinearLayout
        android:id="@+id/lnTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgSavingsIcon"
        android:layout_alignTop="@id/imgSavingsIcon"
        android:layout_alignBottom="@id/imgSavingsIcon"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSavingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Savings Account"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSavingsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="**** 5678"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Balance Section -->
    <LinearLayout
        android:id="@+id/lnSavingsBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSavingsIcon"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Savings"
            android:textColor="#757575"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSavingsBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 12,000.00"
            android:textColor="#2E7D32"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Rate + Profit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnSavingsBalance"
        android:layout_marginTop="12dp"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate (APY)"
                android:textColor="#757575"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvInterestRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5%"
                android:textColor="#333333"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Profit"
                android:textColor="#757575"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvMonthlyProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ $45.00"
                android:textColor="#2E7D32"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
